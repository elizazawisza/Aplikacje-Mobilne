<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#0F0326">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arkanoid"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="#6D676E"
            android:textStyle="bold" android:textSize="55sp"
            android:fontFamily="serif-monospace" android:id="@+id/textView"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="24dp"
    />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="52dp" android:weightSum="18">
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="7"/>
        <Button
                android:text="Easy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:textColor="#FAA916"
                android:background="@drawable/my_button"
                android:textSize="20sp" android:layout_margin="5dp" android:fontFamily="serif-monospace"
                android:textStyle="bold" android:onClick="clickMode" android:layout_weight="1"/>
        <Button
                android:text="Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:textColor="#FAA916"
                android:background="@drawable/my_button"
                android:textSize="20sp" android:layout_margin="5dp" android:fontFamily="serif-monospace"
                android:textStyle="bold" android:onClick="clickMode" android:layout_weight="1"/>
        <Button
                android:text="Hard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FAA916"
                android:id="@+id/button3"
                android:background="@drawable/my_button"
                android:textSize="20sp" android:layout_margin="5dp" android:fontFamily="serif-monospace"
                android:textStyle="bold" android:onClick="clickMode" android:layout_weight="1"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>