<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".GridPhotoFragment">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainFragment">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:scrollbarStyle="insideInset" android:fillViewport="false"
                android:clipToPadding="false" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                        android:weightSum="1">

                    <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_weight="0" android:padding="5dp">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/got1"
                                android:id="@+id/imageView" android:layout_weight="1" android:tag="got1"
                                android:scaleType="centerCrop" android:adjustViewBounds="true"
                                android:cropToPadding="false" android:padding="5dp"/>
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/got2"
                                android:id="@+id/imageView2" android:layout_weight="1"
                                android:scaleType="centerCrop" android:adjustViewBounds="true"
                                android:cropToPadding="false" android:padding="5dp"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                              android:padding="5dp">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/got3"
                                android:id="@+id/imageView3" android:layout_weight="1" android:adjustViewBounds="true"
                                android:padding="5dp" android:scaleType="centerCrop"/>
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/got4"
                                android:id="@+id/imageView4" android:layout_weight="1" android:padding="5dp"
                                android:scaleType="centerCrop" android:adjustViewBounds="true"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                              android:padding="5dp">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/got5"
                                android:id="@+id/imageView5" android:layout_weight="1" android:padding="5dp"
                                android:adjustViewBounds="true" android:scaleType="centerCrop"/>
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/got6"
                                android:id="@+id/imageView6" android:layout_weight="1" android:scaleType="centerCrop"
                                android:padding="5dp" android:adjustViewBounds="true"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                              android:padding="5dp">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/got7"
                                android:id="@+id/imageView7" android:layout_weight="1" android:adjustViewBounds="true"
                                android:padding="5dp" android:scaleType="centerCrop"/>
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/got8"
                                android:id="@+id/imageView8" android:layout_weight="1" android:adjustViewBounds="true"
                                android:padding="5dp" android:scaleType="centerCrop"/>
                    </TableRow>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:padding="5dp">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/lotr1"
                                android:id="@+id/imageView9" android:layout_weight="1" android:scaleType="centerCrop"
                                android:adjustViewBounds="true" android:padding="5dp"/>
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/lotr2"
                                android:id="@+id/imageView10" android:layout_weight="1" android:scaleType="centerCrop"
                                android:padding="5dp" android:adjustViewBounds="true"/>
                    </TableRow>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:padding="5dp">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/lotr3"
                                android:id="@+id/imageView12" android:layout_weight="1" android:scaleType="centerCrop"
                                android:adjustViewBounds="true" android:padding="5dp"/>
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/lotr4"
                                android:id="@+id/imageView13" android:layout_weight="1" android:scaleType="centerCrop"
                                android:padding="5dp" android:adjustViewBounds="true"/>
                    </TableRow>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:padding="5dp">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/lotr5"
                                android:id="@+id/imageView14" android:layout_weight="1"
                                android:adjustViewBounds="true" android:padding="5dp" android:scaleType="centerCrop"/>
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/lotr6"
                                android:id="@+id/imageView15" android:layout_weight="1"
                                android:adjustViewBounds="true" android:padding="5dp" android:scaleType="centerCrop"/>
                    </TableRow>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:padding="5dp">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/potter1"
                                android:id="@+id/imageView16" android:layout_weight="1"
                                android:adjustViewBounds="true" android:scaleType="centerCrop" android:padding="5dp"/>
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/potter2"
                                android:id="@+id/imageView17" android:layout_weight="1"
                                android:adjustViewBounds="true" android:padding="5dp" android:scaleType="centerCrop"/>
                    </TableRow>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:padding="5dp">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/potter3"
                                android:id="@+id/imageView18" android:layout_weight="1" android:scaleType="centerCrop"
                                android:padding="5dp" android:adjustViewBounds="true"/>
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/potter4"
                                android:id="@+id/imageView19" android:layout_weight="1"
                                android:adjustViewBounds="true" android:padding="5dp" android:scaleType="centerCrop"/>
                    </TableRow>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:padding="5dp">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/potter5"
                                android:id="@+id/imageView20" android:layout_weight="1"
                                android:adjustViewBounds="true" android:padding="5dp" android:scaleType="centerCrop"/>
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" app:srcCompat="@drawable/potter6"
                                android:id="@+id/imageView21" android:layout_weight="1" android:scaleType="centerCrop"
                                android:adjustViewBounds="true" android:padding="5dp"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>


</FrameLayout>