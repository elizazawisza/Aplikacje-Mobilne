<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@+id/tableLayout" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/word"/>

    <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="A"
                    android:id="@+id/button6"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="2dip"
                    android:onClick="clickLetter"/>
            <Button
                    android:text="B"
                    android:layout_height="wrap_content"
                    android:id="@+id/button10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="2dip"
                    android:onClick="clickLetter"/>
            <Button
                    android:text="C"
                    android:layout_height="wrap_content"
                    android:id="@+id/button7"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="2dip"
                    android:onClick="clickLetter"/>
            <Button
                    android:text="D"
                    android:layout_height="wrap_content"
                    android:id="@+id/button8"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="2dip"
                    android:onClick="clickLetter"/>
            <Button
                    android:text="E"
                    android:layout_height="wrap_content"
                    android:id="@+id/button9"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="2dip"
                    android:onClick="clickLetter"/>
            <Button
                    android:text="F"
                    android:layout_height="wrap_content"
